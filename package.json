{
  "name": "release-github-action",
  "description": "Create a semantic release for your Github Action",
  "version": "1.1.1",
  "main": "dist/index.js",
  "files": [
    "dist",
    "action.yml"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{js,ts}?(x)' --fix",
    "build": "ncc build src/index.ts --minify --v8-cache",
    "prebuild": "run-s lint clean",
    "prepare": "is-ci || husky install .husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€” staged"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@bubkoo/commitlint-config"
    ]
  },
  "license": "MIT",
  "author": {
    "name": "bubkoo",
    "email": "bubkoo.wy@gmail.com"
  },
  "repository": "https://github.com/wow-actions/release-github-action",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@wow-actions/parse-inputs": "^1.2.0",
    "semantic-release": "^19.0.5"
  },
  "devDependencies": {
    "@bubkoo/commitlint-config": "^1.0.1",
    "@bubkoo/eslint-config": "^1.3.0",
    "@bubkoo/tsconfig": "^1.1.0",
    "@types/node": "^18.11.15",
    "@types/semantic-release": "^17.2.4",
    "@types/semantic-release__error": "^3.0.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
